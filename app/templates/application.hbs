<div class="food-background">
    <div class="layer text-center">
        <nav class="nav-design">
            {{#if session.isAuthenticated}}
            <ul class>
            <li class="nav-links nav-link-left left-animation ">
                <LinkTo class="link-style search" @route="index">Search</LinkTo>
            </li>
            <li class="nav-links nav-link-right right-animation">
                <LinkTo class="link-style favorites" @route="favorites">Favorites</LinkTo>
            </li>
            </ul>
            {{else}}
            <button class="sign-in google-button mt-3" {{action "login"}}>Sign in with Google</button>

            {{/if}}
        </nav>
        {{logo}}
        {{#if session.isAuthenticated}}
        <span class="logged-in">
            <img class="google" alt="google-logo" class="google" src="/assets/images/google.png">
            <span class="logged-in-text">Logged in as {{ session.data.authenticated.user.displayName }} </span> 
        </span>
        <button class="sign-out mr-2 google-button log-out" {{action "logout"}}>Sign out of google</button>
        {{outlet}}
        {{/if}}
    </div>
</div>

