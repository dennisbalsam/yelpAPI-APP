<div class="food-background">
    <div class="layer text-center">
    <div class="logo-container mx-auto">
        <p class="script mt-3"><span>Wish Dish</span></p>
        <p class="text-border text1">THOUSANDS OF</p>
        <p class="text-border text2">FOOD</p>
        <p class="text-border text3">OPTIONS</p>
        <p class="script"><span>Powered by Yelp</span></p>
    </div>
        {{#if session.isAuthenticated}}
        Logged in as {{ session.data.authenticated.user.displayName }}
        <button {{action "logout"}}>Sign out</button>
        <ul>
            <li>
                <LinkTo @route="index">Search</LinkTo>
            </li>
            <li>
                <LinkTo @route="favorites">Favorites</LinkTo>
            </li>
        </ul>
        {{outlet}}
        {{else}}
        <button {{action "login"}}>Sign in with Google</button>
        {{/if}}
    
    </div>
</div>
