<div class="food-background">
    <div class="layer text-center">
        <nav class="nav-design">
            {{#if session.isAuthenticated}}
            <ul>
            <li class="nav-links nav-link-left left-animation ">
                <LinkTo class="link-style" @route="index">Search</LinkTo>
            </li>
            <li class="nav-links nav-link-right right-animation">
                <LinkTo class="link-style" @route="favorites">Favorites</LinkTo>
            </li>
            </ul>
            {{else}}
            <button {{action "login"}}>Sign in with Google</button>
            {{/if}}
        </nav>
        {{logo}}
        {{#if session.isAuthenticated}}
        <span class="logged-in">
            <img class="google" alt="google-logo" class="google" src="/assets/images/google.png">
            <span class="">Logged in as {{ session.data.authenticated.user.displayName }} </span> 
        </span>
        <button class="mr-2 log-out" {{action "logout"}}>Sign out of google</button>
        {{outlet}}
        {{/if}}
    </div>
</div>
